<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="MealRottable">
		<defName>MealSalad</defName>
		<label>prepared salad</label>
		<description>A bowl of crisp and refreshing salad, perfect for any health-conscious colonist.</description>
    <graphicData>
      <texPath>Things/Salad</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <DeteriorationRate>12</DeteriorationRate>
      <MarketValue>22</MarketValue>
      <WorkToMake>200</WorkToMake>
    </statBases>
    <ingestible>
      <preferability>MealFine</preferability>
      <tasteThought>AteSaladMeal</tasteThought>
      <nutrition>0.85</nutrition>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
    </ingestible>
	</ThingDef>

	<ThingDef ParentName="MealRottable">
		<defName>MealTCSoup</defName>
		<label>tomato and carrot soup</label>
		<description>A bowl of delicious tomato and carrot soup served with potato croutons.</description>
    <graphicData>
      <texPath>Things/TCSoup</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>32</MarketValue>
      <WorkToMake>600</WorkToMake>
    </statBases>
    <ingestible>
      <preferability>MealLavish</preferability>
      <tasteThought>AteTCSoupMeal</tasteThought>
      <nutrition>0.95</nutrition>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
    </ingestible>
	</ThingDef>

</ThingDefs>
