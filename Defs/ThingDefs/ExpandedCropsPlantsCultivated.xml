<?xml version="1.0" encoding="utf-8" ?>
<Plants>

	<!-- New growing zone / hydroponics crop types -->
	<!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

  <ThingDef ParentName="PlantBase">
		<defName>PlantTomato</defName>
		<label>tomato vine</label>
		<description>Distinctive red fruit that grows best in rich soil.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
    </statBases>
    <graphicData>
      <texPath>Things/TomatoPlant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible>
      <nutrition>0.22</nutrition>
    </ingestible>
    <plant>
      <fertilitySensitivity>0.8</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <reproduces>false</reproduces>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawTomatoes</harvestedThingDef>
      <harvestYield>12</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>6.0</growDays>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

